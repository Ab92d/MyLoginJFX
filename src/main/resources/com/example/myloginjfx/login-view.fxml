<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER_LEFT" prefHeight="480.0" prefWidth="480.0" spacing="20.0" styleClass="teal-panel" stylesheets="@../myloginjfx/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myloginjfx.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="loginText" prefHeight="17.0" prefWidth="85.0" styleClass="teal-panel" stylesheets="@../myloginjfx/styles.css" text="Login" textFill="#c7ffed" translateX="-10.0">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
        <VBox.margin>
            <Insets left="20.0" />
        </VBox.margin></Label>
    <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" styleClass="tf_box">
        <children>
            <TextField fx:id="txtUsername" maxHeight="-Infinity" maxWidth="-Infinity" opacity="0.41" prefHeight="27.0" prefWidth="397.0" promptText="Username" styleClass="tf_box" HBox.hgrow="ALWAYS" />
            <ImageView blendMode="SCREEN" fitHeight="24.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" translateX="10.0">
                <image>
                    <Image url="@../images/lockicon.png"/>
                </image>
            </ImageView>
        </children>
        <VBox.margin>
            <Insets bottom="15.0" left="15.0" top="15.0" />
        </VBox.margin>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" styleClass="tf_box">
        <children>
            <TextField fx:id="txtPassword" maxHeight="-Infinity" maxWidth="-Infinity" opacity="0.41" prefHeight="27.0" prefWidth="397.0" promptText="Password" styleClass="tf_box" HBox.hgrow="ALWAYS">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
            </TextField>
            <ImageView fitHeight="30.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true" translateX="10.0">
                <image>
                    <Image url="C:\Users\amyja\OneDrive\Document" />
                </image>
            </ImageView>
        </children>
        <VBox.margin>
            <Insets bottom="15.0" left="15.0" top="20.0" />
        </VBox.margin>
    </HBox>
    <Button fx:id="btnSignin"  onAction ="#onSignInBtnClick" prefHeight="40.0" prefWidth="450.0" styleClass="teal-btn" text="Sign in" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="15.0" right="15.0" top="20.0" />
        </VBox.margin>
        <font>
            <Font size="17.0" />
        </font></Button>
    <Button fx:id="resetButton" layoutX="45.0" layoutY="358.0" onAction="#onResetButtonClicked" prefHeight="40.0" prefWidth="145.0" styleClass="teal-btn" text="Reset">
        <font>
            <Font size="17.0" />
        </font>
    </Button>
    <cursor>
        <Cursor fx:constant="CLOSED_HAND" />
    </cursor>
</VBox>
